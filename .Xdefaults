! Xft
Xft.antialias: 1
Xft.autohint: 1
! Xft.dpi: 94
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! Compile rxvt with flags: --enable-frills --enable-unicode3 (https://github.com/powerline/powerline/issues/684)
 *font: xft:Pragmata\ Pro\ Mono:size=12
!*font: xft:monospace:size=14

! Colors
! Hybrid? Gruvbox? Seoul256?
! hard contrast: *background: #1d2021
!*background: #282828
! soft contrast:
*background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! Rofi
rofi.opacity:              80
rofi.width:                20
rofi.lines:                15
rofi.columns:              3
rofi.font:                 PragmataPro 10
rofi.fg:                   #c2c2c2
rofi.bg:                   #1c1c1c
rofi.bgalt:                #1c1c1c
rofi.hlfg:                 #ffffff
rofi.hlbg:                 #1c1c1c
! State:           'bg',    'fg',   'bgalt',  'hlbg',  'hlfg'
rofi.color-normal: #1c1c1c, #c2c2c2, #1c1c1c, #1c1c1c, #ffffff
rofi.color-urgent: #1c1c1c, #c2c2c2, #1c1c1c, #1c1c1c, #ffffff
rofi.color-active: #1c1c1c, #c2c2c2, #1c1c1c, #1c1c1c, #ffffff
!                  'bg',    'border'
rofi.color-window: #1c1c1c, #444
rofi.bc:                   black
rofi.bw:                   1
rofi.location:             2
rofi.padding:              2
rofi.yoffset:              400
rofi.xoffset:              0
rofi.fixed-num-lines:      false
rofi.terminal:             urxvt

! i3wm
i3wm.gaps.inner: 10
i3wm.gaps.outer: 2

! Polybar
polybar.wlan.interface: wlp3s0
polybar.border-left-size:  12
polybar.border-right-size: 12
polybar.height: 24
polybar.font-0: fixed:pixelsize=10;1
polybar.font-1: unifont:fontformat=truetype:size=8:antialias=false;0
polybar.font-2: Wuncon\ Siji:pixelsize=10;1

#include ".Xresources"
